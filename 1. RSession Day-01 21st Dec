###if condition 
sales <- 1001
tax <- 0

if(sales>1000){
  
  tax = sales*.18
}

total = sales+tax
total 

## if else 
sales <- 500
tax <- 0

if(sales>1000){
  
  tax = sales*.18
}else {
  
  tax = sales*.05
}

total = sales+tax
total 


####if else if else ...
hs = 77
es  =60
cs = 60
ms = 89

total = hs+es+cs+ms
avg = total / 4

if(avg>=80){
  
  print("A")
  
}else if(avg>=60){
  
  print("B")
  
}else if(avg>=40){
  
  print("C")
  
}else{
  
  print("F")
}


####ifelse 
n =10
ifelse(n%%2==0,"even","odd")


##-while Loop
i =1
while(i<10){
  
  print(i)
  i=i+1
}

#print in reverse order
i =10
while(i>0){
  
  print(i)
  i=i-1
}
#print table of two 
i=2
while(i<=20){
    print(i)
  i=i+2
}


##for loop 
data <- c(111,222,333,444,55)


for(x in data){
  print(x)
}


###R - break & next
###R - repeat Loop
i =1
while (i<10){
  
  if(i%%3 ==0){
    break
  }
  print(i)
  i =i+1
}

###
data
for(x in data){
  
  
  if(x%%2 ==0 )  {
    next
  }
    print(x)
}

#####
i=1
repeat{
  
  if(i>5){
    break
  }
  print(i)
  i=i+1
}

